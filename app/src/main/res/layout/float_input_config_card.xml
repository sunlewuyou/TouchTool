<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="?attr/defaultPadding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/iconButtonSize">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/closeButton"
            style="?attr/iconButton"
            android:layout_gravity="end|center"
            app:icon="@drawable/icon_close" />
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minWidth="198dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/inBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="?attr/defaultPadding"
            app:flexWrap="wrap"
            app:justifyContent="flex_start" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="?attr/defaultPadding"
            app:icon="@drawable/icon_schedule" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/enterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/enter" />

    </LinearLayout>

</LinearLayout>
